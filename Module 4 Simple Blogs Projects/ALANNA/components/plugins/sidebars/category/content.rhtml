<% unless @categories.blank? -%>
<h3>Categories</h3>
<ul id="categories">
<% for category in @categories -%>
  <% unless empty.blank? and category.article_counter == 0 %>
  <li><%= link_to h(category.name), :controller => "articles", :action => "category", :id => category.permalink  %> <% unless count.blank? %><em>(<%= category.article_counter %>)</em><% end %></li>
  <% end %>
<% end -%>
</ul>
<% end %>
