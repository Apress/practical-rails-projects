  <% @page_heading = "Comments for #{ link_to h(@article.title), :controller => 'content', :action => 'show', :id => @article }" %>

  <% content_for('tasks') do %>
    <li><%= comment_url_link 'View comment on your blog', @comment %></li>
  <% end %> 

  <%= start_form_tag :action=>"edit", :id => @comment.id %>

  <h3>Editing comment</h3>
  <div class="form">	
    <%= render_partial "form" %>
  </div>

  <div id="operations">
    <%= save %> or <%= cancel %>  
  </div>

  <%= end_form_tag %>
